{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["tests/**", "**/tests/**", "**/*.test.js"]
      }
    ],
    "import/order": "off",
    "global-require": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "max-len": ["error", { "code": 120 }]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
